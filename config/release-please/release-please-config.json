{
	"include-component-in-tag": true,
	"include-v-in-tag": true,
	"tag-separator": "@",
	"separate-pull-requests": true,
	"bump-minor-pre-major": true,
	"bump-patch-for-minor-pre-major": true,
	"changelog-path": "CHANGELOG.md",
	"exclude-paths": [
		"deploy/**"
	],
	"packages": {
		".": {}
	},
	"release-type": "go",
	"label": "release: pending,release/pending",
	"release-label": "release/released",
	"pull-request-header": ":gift: New release!",
	"pull-request-footer": "Happy releasing! :tada:",
	"changelog-sections": [
		{
			"type": "feat",
			"section": "New Features :rocket:"
		},
		{
			"type": "fix",
			"section": "Bug Fixes :bug:"
		},
		{
			"type": "perf",
			"section": "Performance Improvements :zap:"
		},
		{
			"type": "revert",
			"section": "Reverts :rewind:"
		},
		{
			"type": "docs",
			"section": "Documentation :memo:"
		},
		{
			"type": "style",
			"section": "Styles :nail_care:"
		},
		{
			"type": "chore",
			"section": "Miscellaneous Chores :wrench:"
		},
		{
			"type": "refactor",
			"section": "Code Refactoring :recycle:"
		},
		{
			"type": "test",
			"section": "Tests :test_tube:"
		},
		{
			"type": "build",
			"section": "Build System :hammer:"
		},
		{
			"type": "ci",
			"section": "Continuous Integration :robot:"
		}
	],
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
